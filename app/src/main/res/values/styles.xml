<resources>

  <!-- Themes -->

  <style name="Theme.SeriesGuideToPlex" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/theme_primary</item>
    <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    <item name="colorAccent">@color/theme_accent</item>

    <item name="preferenceTheme">@style/SeriesGuideToPlex.PreferenceThemeOverlay</item>
    <item name="android:listPreferredItemPaddingStart">?listPreferredItemPaddingLeft</item>
    <item name="android:listPreferredItemPaddingEnd">?listPreferredItemPaddingRight</item>
  </style>

  <style name="SeriesGuideToPlex.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay.v14.Material">
    <item name="preferenceStyle">@style/SeriesGuideToPlex.Preference</item>
    <item name="preferenceCategoryStyle">@style/SeriesGuideToPlex.Preference.Category</item>
    <item name="dialogPreferenceStyle">@style/SeriesGuideToPlex.Preference.DialogPreference</item>
    <item name="preferenceScreenStyle">@style/SeriesGuideToPlex.Preference</item>
  </style>

  <style name="SeriesGuideToPlex.Preference" parent="">
    <item name="layout">@layout/preference_fix</item>
    <item name="android:layout">@layout/preference_fix</item>
  </style>

  <style name="SeriesGuideToPlex.Preference.Category">
    <item name="layout">@layout/preference_category_fix</item>
    <item name="shouldDisableView">false</item>
    <item name="selectable">false</item>
    <item name="android:layout">@layout/preference_category_fix</item>
    <item name="android:shouldDisableView">false</item>
    <item name="android:selectable">false</item>
  </style>

  <style name="SeriesGuideToPlex.Preference.DialogPreference">
    <item name="android:positiveButtonText">@android:string/ok</item>
    <item name="android:negativeButtonText">@android:string/cancel</item>
  </style>
</resources>
